<div class="row">
  <div class="col"></div>
    <div class="col-md-10">

      <h1>Lista de articulos</h1>
      <p>
        <%= link_to 'Crear nuevo articulo', new_article_path, class:'btn btn-lg btn-info'%>
      </p>
      <table class="table table-hover">
        <tr>
          <th>Title</th>
          <th>Text</th>
          <th></th>
        </tr>
 
      <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            
            <td><%= link_to 'Ver', article_path(article), class:'btn btn-lg btn-info'%></td>
            <td><%= link_to 'Editar', edit_article_path(article), class:'btn btn-lg btn-warning'%></td>
            <td><%= link_to 'Eliminar', article_path(article), class:'btn btn-lg btn-danger',
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
      <%= link_to 'Inicio', welcome_index_path, class:'btn btn-md btn-primary' %>
    </div>
  <div class="col"></div>
</div>


